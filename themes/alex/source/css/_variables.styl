// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #535353
color-grey = #999
color-border = #ddd
color-link = #11a7db
color-header = #fff
color-background = #fff
color-sidebar-text = #777
color-widget-background = #ddd
color-widget-border = #ccc
color-header-background = #3a3f41
color-footer-background = #3a3f41
color-nav-background = #00a9db
color-nav-hover-background = #2172AB
color-mobile-nav-background = #3686be
color-search-form-input = rgba(255,255,255,0.5)
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-sans = "Helvetica Neue", Helvetica, Arial, sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-yahei = "Microsoft Yahei"
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 14px
line-height = 28px
entry-margin = 0 0 22px 0
line-height-title = 1.2
entry-title-margin = 14px 0 11px 0

// Header
logo = "images/logo.png"
logo-2x = "images/logo@2x.png"
preloader = "images/preloader.gif"
preloader-2x = "images/preloader@2x.gif"
header-height = 94px

sidebar = hexo-config("sidebar")

// Layout
container-width = 100%
container-padding = 20px
block-margin = 50px
article-padding = 0px
highlight-padding = 20px
main-column = 9
sidebar-column = 2
search-form-input-width = 252px

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"